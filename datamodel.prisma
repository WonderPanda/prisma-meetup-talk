type User {
  id: ID! @unique
  handle: String! @unique
  emailAddress: String! @unique
  name: String!
  servers: [Server]
  friends: [User]
}

type Server {
  id: ID! @unique
  name: String!
  public: Boolean! @default(value: "true")
  members: [User!]!
  channels: [Channel!]!
}

type Channel {
  id: ID! @unique
  name: String!
  server: Server!
  public: Boolean! @default(value: "true")
  messages: [Message!]!
  members: [User!]!
}

type Message {
  id: ID! @unique
  author: User!
  channel: Channel!
}
